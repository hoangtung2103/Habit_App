<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="396dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="#FAEED9"
    android:id="@+id/popup_create_milestone">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milestone name"
                android:textColor="#0B4A3B"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/input_milestone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textColor="#0B4A3B"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/input_milestone_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Streak"
                android:textColor="#0B4A3B"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/input_required_streak_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#0B4A3B"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/input_milestone_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type (optional)"
                android:textColor="#0B4A3B"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/input_milestone_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_submit_create_milestone"
            android:layout_width="123dp"
            android:layout_height="43dp"
            android:drawableEnd="@drawable/check_ring"
            android:drawablePadding="1dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFA725"
            android:gravity="center_vertical"
            android:text="LÆ°u"
            android:textColor="#0B4A3B"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>